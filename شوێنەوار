        function renderSites(filter = 'all') {
            const grid = document.getElementById('sitesGrid');
            grid.innerHTML = '';
            
            const filtered = filter === 'all' 
                ? sites 
                : sites.filter(site => site.category === filter);

            filtered.forEach(site => {
                const card = document.createElement('div');
                card.className = 'site-card';
                card.innerHTML = `
                    <div class="site-image"></div>
                    <div class="site-content">
                        <h2 class="site-title">${site.name}</h2>
                        <span class="site-category">${getCategoryName(site.category)}</span>
                        <p class="site-description">${site.description}</p>
                        <p class="site-year">ðŸ“… ${site.year}</p>
                    </div>
                `;
                card.onclick = () => showModal(site);
                grid.appendChild(card);
            });
        }

        function getCategoryName(cat) {
            const names = {
                'unesco': 'ÛŒÙˆÙ†ÛŒØ³Ú©Û†',
                'archaeological': 'Ø´ÙˆÛŽÙ†Û•ÙˆØ§Ø±ÛŒ',
                'islamic': 'Ø¦ÛŒØ³Ù„Ø§Ù…ÛŒ',
                'historical': 'Ù…ÛŽÚ˜ÙˆÙˆÛŒÛŒ'
            };
            return names[cat] || cat;
        }

        function showModal(site) {
            const modal = document.getElementById('modal');
            const modalBody = document.getElementById('modalBody');
            
            modalBody.innerHTML = `
                <h2 style="color: #667eea; margin-bottom: 20px;">${site.name}</h2>
                <span class="site-category">${getCategoryName(site.category)}</span>
                <p style="color: #999; margin: 15px 0;">ðŸ“… ${site.year}</p>
                <p style="line-height: 1.8; color: #666; margin-bottom: 15px;">${site.description}</p>
                <h3 style="color: #764ba2; margin: 20px 0 10px 0;">Ø²Ø§Ù†ÛŒØ§Ø±ÛŒ Ø²ÛŒØ§ØªØ±:</h3>
                <p style="line-height: 1.8; color: #666;">${site.details}</p>
            `;
            
            modal.style.display = 'block';
        }

        function closeModal() {
            document.getElementById('modal').style.display = 'none';
        }

        document.querySelectorAll('.filter-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                document.querySelectorAll('.filter-btn').forEach(b => b.classList.remove('active'));
                this.classList.add('active');
                renderSites(this.dataset.filter);
            });
        });

        window.onclick = function(event) {
            const modal = document.getElementById('modal');
            if (event.target === modal) {
                closeModal();
            }
        }

        renderSites();
    </script>
